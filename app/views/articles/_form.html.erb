<%if @article.errors.any?%>
<h1>There are following errors</h1>
<ul>
<% @article.errors.full_messages.each do |err_msg| %>
<li>
	<%=err_msg%>
</li>
<%end%>
</ul>
<% end %>
<%= form_for @article do |f|%>
	<p>
