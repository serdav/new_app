<%= render 'shared/errors', object: @category%>
    <%= form_for @category do |f|%>
        <div class="form-group row">
            <%= f.label :name, class: "col-sm-2 col-form-label", for: "inputTitle"%>
                <br/>
                <div class="col-sm-10">
                    <%= f.text_field :name, placeholder: "Enter category name", class: "form-control", id: "inputTitle"%>
                </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <%= f.submit class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
        <% end %>
        <div class="col-xs-4 col-xs-offset-4">
        [<%= link_to "Cancel request and return to articles listing", articles_path %> ]
        </div>