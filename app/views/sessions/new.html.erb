    <h1 align="center">Log in</h1>
    <%= form_for(:session, url: login_path)  do |f|%>
        <div class="form-group row">
            <%= f.label :email, class: "col-sm-2 col-form-label", for: "inputDescription" %>
                <br/>
                <div class="col-sm-10">
                    <%= f.email_field :email, placeholder: "Enter email", autofocus: true, class: "form-control", id: "inputDescription" %>
                </div>
        </div>

       <div class="form-group row">
            <%= f.label :password, class: "col-sm-2 col-form-label", for: "inputDescription" %>
                <br/>
                <div class="col-sm-10">
                    <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "inputDescription" %>
                </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <%= f.button "Log in", class: "btn btn-primary btn-lg", type: "submit" %>
            </div>
        </div>
        <% end %>